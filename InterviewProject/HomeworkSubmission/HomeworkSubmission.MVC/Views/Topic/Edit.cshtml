@model HomeworkSubmission.DAL.Topic

<tr @if (Model != null) {
    @:data-pkey="@Model.ID"
}>
    <td>
        @Html.DropDownList("CourseID", String.Empty)
        @Html.ValidationMessageFor(model => model.CourseID)
    </td>
    <td>
        @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)
    </td>
    <td>
        @Html.EditorFor(model => model.IsActive)
        @Html.ValidationMessageFor(model => model.IsActive)
    </td>
    <td>
        @Html.EditorFor(model => model.ActiveFrom)
        @Html.ValidationMessageFor(model => model.ActiveFrom)
    </td>
    <td>
        @Html.EditorFor(model => model.ActiveTo)
        @Html.ValidationMessageFor(model => model.ActiveTo)
    </td>
    <td>
@if (ViewContext.RouteData.Values["Action"].ToString() == "Edit") {
        <button class="editRow">Save</button><button class="cancelEditRow">Cancel</button>
} else {
        <button class="createRow">Create</button><button class="cancelCreateRow">Cancel</button>
}
    </td>
</tr>
